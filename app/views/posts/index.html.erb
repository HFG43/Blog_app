<div>
  <%= @author.name%>
  <%= "Number of posts: #{@author.posts_counter}"%>
</div>

<% @posts.each do |post|%>
  <div>
    <h2><%= "Post # #{post.id}"%></h2>
    <p><%=post.text%></p>
    <span><%="Comments #{post.comments_counter}, Likes #{post.likes_counter}"%></span>
  </div>
  <% post.comments.each do |comment|%>
    <%= "#{comment.author.name}: #{comment.text}"%>
  <%end%>  
<%end%>

<div>
  <button type="button">Pagination</button>
</div>